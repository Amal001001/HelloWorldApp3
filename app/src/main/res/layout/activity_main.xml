<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/a" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="285dp"
        android:layout_height="177dp"
        android:background="#EBFFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Hi there"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:translationX="100dp"
            android:translationY="5dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="write your username"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#CF9490"
            android:textColorHighlight="#cf9490"
            android:textSize="20sp"
            android:translationX="35dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change the colors"
            android:textColor="#FFFFFF"
            android:translationX="45dp"
            android:backgroundTint="#509360" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm not a robot, duh!"
            android:translationX="60dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>